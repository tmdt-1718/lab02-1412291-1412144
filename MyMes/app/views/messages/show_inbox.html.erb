<h1>INBOX</h1>
<%= link_to 'New message', new_message_path %>
| <%= link_to 'Sent', messages_sent_path %>
| <%= link_to 'All users', friendships_path %>
| <%= link_to 'Your friends', friendships_friends_path %>

<div>
  <% if @receivers %>
    <% @receivers.each do |receiver| %>
      <br></br>
      <% if receiver.read_at %>
        <p><%= receiver.message.content %></p>
      <%else%>
        <strong><%= receiver.message.content %></strong>
      <%end%>
      <p>From: <%= receiver.message.sender.email%></p>
      <%= link_to "Read", message_path(id: receiver.message.id), method: :get %>
    <% end %>
  <% end %>
</div>
