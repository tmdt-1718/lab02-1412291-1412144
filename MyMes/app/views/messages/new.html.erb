<h1> New messages</h1>
<%= form_tag messages_path, method: :post do %>
          <div class="form-group">
            <%= label_tag :friend, 'Send to:'%>
            <!-- <%= select_tag :friend_id, @friendships.collect { |u| [ u.friend.email] } %> -->
            <% friends_array = @friendships.map { |friendship| [friendship.friend.email, friendship.friend.id] } %>
            <%=select_tag 'receivers[]', options_for_select(friends_array), multiple: true%>
          </div>
          <div class="form-group">
            <%= label_tag :content%>
            <%= text_area_tag :content%>
          </div>
          <center>
            <%= submit_tag 'Send message', class: "btn btn-primary"%>
          </center>

<% end %>
