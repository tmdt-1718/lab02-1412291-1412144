

  <% if @users %>
      <div class="row" style="width: 100%">
        <% @users.each do |user| %>
            <div class="3u 4u$(small)">
          <%if user.id != current_user.id%>
              <center>
                <%= image_tag('https://cdn1.iconfinder.com/data/icons/ninja-things-1/720/ninja-background-256.png', :id => "output", :style => "width:150px;height:150px", class: "img-circle") %>
              <p style="margin:0 "><%= user.name %></p>
              <% if @friendships.pluck(:friend_id).include?(user.id) %>
                <%= link_to "Unfriend", friendship_path(id: @friendships.where(friend_id: user.id).select(:id).first ),class:"button special", method: :delete %>
              <% else %>
                <%= link_to "Add Friend", friendships_path(friend_id: user.id), class:"button ",method: :post %>
              <% end %>
              </center>
            <%end%>
            </div>
        <% end %>
      </div>
  <% end %>
